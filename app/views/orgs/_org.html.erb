<div id="<%= dom_id org %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= org.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this org", org, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this org', edit_org_path(org), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
