<div class="overflow-hidden bg-white shadow sm:rounded-lg w-full">
  <div class="flex items-center justify-between px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900"><%= @template.name %></h3>
    <%= link_to "Nuevo Usuario", new_template_user_path(@template), class: "ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700" %>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <% @users.each do |user| %>
        <div class="<%= cycle("bg-gray-50", "bg-white") -%> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <%= link_to user_path user do %>
            <dt class="text-sm font-medium text-indigo-600 hover:text-indigo-500"><%= user.name %></dt>
          <% end %>
        </div>
      <% end %>
    </dl>
  </div>
</div>